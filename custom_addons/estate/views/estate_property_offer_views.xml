<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="estate_property_offer_list">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list decoration-danger="status=='refused'"
                decoration-success="status== 'accepted'">
                <field name="price" width="20%" class="font-weight-bold" />
                <field name="partner_id" width="20%" />
                <field name="property_type_id"  width="10%"/>
                <field name="validity" string="Validity (days)" width="15%" />
                <field name="date_deadline" string="Deadline" width="15%" />
                <button invisible="status" name="action_accept_offer" type="object" title="Accept"
                    icon="fa-check" width="5%" />
                <button invisible="status" name="action_refuse_offer" type="object" title="Refuse"
                    icon="fa-times" width="5%" />
                <field name="status" width="20%" invisible="1" />
                <!-- <field name="property_id" /> -->
            </list>
        </field>

    </record>

    <!-- Form view definition -->

    <record model="ir.ui.view" id="estate_property_offer_form">
        <field name="name">Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer" create="True" edit="True">
                <sheet>
                    <group name="name">
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="validity" string="validity (days)" />
                        <field name="date_deadline" string="Deadline" />
                        <field name="status" />
                        <!-- <field name="property_id" /> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
<odoo>
    <data>
        <record model="ir.ui.view" id="estate_property_type_list">
            <field name="name">Property Types</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" nolabel="True" string="Title" />
                    <field name="sequence" widget="handle" />
                </list>
            </field>

        </record>

        <!-- Property Offer action definition -->
        <record model="ir.actions.act_window" id="estate_property_offer_action_window">
            <field name="name">Real Estate Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record>

        <!-- Form view definition -->

        <record model="ir.ui.view" id="estate_property_type_form">
            <field name="name">Property Types</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form string="Estate Property Tag" create="True" edit="True">
                    <header class="oe_form_header_buttons">
                        <button string="Offers"
                            name="%(estate.estate_property_offer_action_window)d"
                            type="action" class="oe_button_box oe_right" icon="fa-money" />
                    </header>
                    <sheet>
                        <group name="name">
                            <field name="name" nolabel="1" class="h1" />
                        </group>
                        <notebook>
                            <page name="Properties" string="Properties">
                                <field name="property_ids">
                                    <list>
                                        <field name="name" width="50%" string="Title" />
                                        <field name="expected_price" width="10%" />
                                        <field name="state" string="Status" width="10%" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
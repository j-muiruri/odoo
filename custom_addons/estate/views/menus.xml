<odoo>
    <data>

        <record model="ir.actions.act_window" id="estate_property_action_window">
            <field name="name">Real Estate Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_available': True}</field>
        </record>

        <record model="ir.actions.act_window" id="estate_property_type_action_window">
            <field name="name">Real Estate Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="estate_property_tag_action_window">
            <field name="name">Real Estate Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">list,form,kanban</field>
        </record>

        <!-- Top menu item -->

        <menuitem name="Real Estate Application" id="estate_property_menu_root" />

        <!-- menu categories -->

        <menuitem name="Advertisements" id="estate_property_menu_1"
            parent="estate_property_menu_root" />

        <menuitem name="Settings" id="estate_property_settings_menu_1"
            parent="estate_property_menu_root" />

        <!-- actions -->

        <menuitem name="Properties" id="estate_property_menu_1_list"
            parent="estate_property_menu_1"
            action="estate_property_action_window" />

        <!-- actions -->
        <menuitem name="Property Types" id="estate_property_type_menu_1_list"
            parent="estate_property_settings_menu_1"
            action="estate_property_type_action_window" />

        <menuitem name="Property Tags" id="estate_property_tag_menu_1_list"
            parent="estate_property_settings_menu_1"
            action="estate_property_tag_action_window" />


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="estate_property_tag_list">
            <field name="name">Property Tags</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" nolabel="True" string="Title" />
                </list>
            </field>

        </record>

        <!-- Form view definition -->

        <record model="ir.ui.view" id="estate_property_tag_form">
            <field name="name">Property Tag</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Estate Property Tag" create="True" edit="True">
                    <sheet>
                        <group name="name">
                            <field name="name" nolabel="1" class="h1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>
